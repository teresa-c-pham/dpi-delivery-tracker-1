<div>
  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
  <div>
    <h1>
      Delivery Tracker
    </h1>
  </div>
  <p>Know if something gets lost in the mail.</p>
</div>

<hr>

<div>
  <div>
    <h2>
      Expecting a package?
    </h2>

    <form action="/insert_delivery" method="post">
      <div>
        <input type="hidden" name="query_user_id" value="<%= current_user.id %>">
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="supposed_to_arrive_on_box">
          Supposed to arrive on
        </label>

        <input type="date" id="supposed_to_arrive_on_box" name="query_supposed_to_arrive_on">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <textarea type="text" id="details_box" name="query_details" rows=3></textarea>
      </div>

      <button>
        Log delivery
      </button>
    </form>
  </div>
</div>

<hr>
<div class="waiting_on" style="background-color: lightgoldenrodyellow;">
  <h2>Waiting on</h2>
  <ul>
    <% @list_of_deliveries.each do |a_delivery| %>
      <% if a_delivery.user_id == current_user.id && !(a_delivery.arrived) %>
        <li>
          <div><%= a_delivery.description %></div>
          <% if a_delivery.supposed_to_arrive_on < Date.today-3.days %>
            <div style="color: red;">Supposed to arrive on <%= a_delivery.supposed_to_arrive_on %></div>
          <% else %>
            <div>Supposed to arrive on <%= a_delivery.supposed_to_arrive_on %></div>
          <% end %>
          <div><%= a_delivery.details %></div>
          <form action="/modify_delivery/<%= a_delivery.id %>" method="post">
            <div><input type="hidden" name="query_user_id" value="<%= a_delivery.user_id %>"></div>
            <div><input type="hidden" name="query_description" value="<%= a_delivery.description %>"></div>
            <div><input type="hidden" name="query_details" value="<%= a_delivery.details %>"></div>
            <div><input type="hidden" name="query_supposed_to_arrive_on" value="<%= a_delivery.supposed_to_arrive_on %>"></div>
            <div><input type="hidden" name="query_arrived" value="<%= a_delivery.arrived %>"></div>
            <div><button>Mark as received</button></div>
          </form>
          <br>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
<hr>
<div class="received" style="background-color: lightgreen;">
  <h2>Received</h2>
  <ul>
    <% @list_of_deliveries.each do |a_delivery| %>
      <% if a_delivery.user_id == current_user.id && (a_delivery.arrived) %>
        <li>
          <div><%= a_delivery.description %></div>
          <div>Updated <%= time_ago_in_words(a_delivery.updated_at) %> ago<a href="/delete_delivery/<%= a_delivery.id %>">Delete</a></div>
          <br>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
